<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="34dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/basicImage"
        android:layout_width="110dp"
        android:layout_height="95dp"

        android:scaleType="centerCrop"
        android:src="@drawable/img_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/basicText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="24dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Ola e-scooters go on sale: Hereâ€™s..."
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/basicImage"
        app:layout_constraintTop_toTopOf="@+id/basicImage" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:text="Read news"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/basicImage"
        app:layout_constraintTop_toBottomOf="@+id/basicText" />

    <View
        android:layout_width="59dp"
        android:layout_height="2dp"
        android:layout_marginStart="17sp"
        android:background="@color/colorAccent"

        app:layout_constraintStart_toEndOf="@+id/basicImage"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>